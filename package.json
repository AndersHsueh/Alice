{
  "name": "alice-cli",
  "version": "0.3.1",
  "description": "ALICE - AI-powered office assistant CLI with Function Calling support",
  "type": "module",
  "bin": {
    "alice": "./dist/index.js",
    "alice-service": "./dist/daemon/cli.js"
  },
  "scripts": {
    "dev": "tsx src/index.tsx",
    "dev:watch": "tsx watch src/index.tsx",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rimraf dist"
  },
  "keywords": [
    "cli",
    "ai",
    "assistant",
    "office",
    "productivity",
    "function-calling",
    "tools",
    "llm"
  ],
  "author": "Anders",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AndersHsueh/Alice.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "axios": "^1.6.5",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.3",
    "figlet": "^1.7.0",
    "glob": "^13.0.1",
    "gradient-string": "^2.0.2",
    "ink": "^4.4.1",
    "ink-spinner": "^5.0.0",
    "jsonc-parser": "^3.3.1",
    "marked": "^15.0.12",
    "marked-terminal": "^7.3.0",
    "react": "^18.2.0",
    "simple-git": "^3.30.0",
    "string-width": "^8.1.1",
    "strip-ansi": "^7.1.2"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.8",
    "@types/gradient-string": "^1.1.6",
    "@types/marked-terminal": "^6.1.1",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "pkg": {
    "targets": [
      "node20-win-x64",
      "node20-macos-x64",
      "node20-macos-arm64",
      "node20-linux-x64"
    ],
    "outputPath": "dist",
    "assets": [
      "node_modules/figlet/fonts/**/*"
    ]
  }
}
